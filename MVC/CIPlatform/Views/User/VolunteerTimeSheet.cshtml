<style>

    .applyButton {
        border: 2px solid #F88634;
        border-radius: 100px;
        color: #F88634;
        background-color: white;
        padding-left: 20px;
        padding-right: 20px;
    }

        .applyButton:hover {
            background-color: #F88634;
            color: white;
        }

    table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
    }

        table tbody {
            display: table;
            width: 100%;
        }

    table, tr, td, th {
        padding: 10px;
        margin: auto;
        border: none;
    }

    .profile-nav {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    .nav-item {
        list-style-type: None;
    }

    .profile {
        width: 40px;
        height: 40px;
        border-radius: 50%;
