<script>

    function getMissionDate(who)
    {
        debugger
        var missionId;
        if(who == "time")
        {
            missionId = $('#missionId').val();
        }
        else
        {
            missionId = $('#missionId2').val();
        }

        $.ajax({
        url: '/User/getMissionDate',
        type: 'POST',
        data: {
            MissionId: missionId
        },
        success: function (data) {
            debugger
            console.log(data)
            if(who == "time")
            {
                $('#dateVolunteered').val('');
                var minDate = data.startDateEdit; 
                var maxDate = data.endDateEdit;
                $('#dateVolunteered').attr('min', minDate); 
                $('#dateVolunteered').attr('max', maxDate);
            }
            else
            {
                $('#dateVolunteered2').val('');
                var minDate = data.startDateEdit; 
                var maxDate = data.endDateEdit;
                $('#dateVolunteered2').attr('min', minDate); 
                $('#dateVolunteered2').attr('max', maxDate);
            }
            
        },
        error: function () {
            console.log("Error updating variable");
        }
        })
    }


    function checkSameDate(who) {
        debugger
        var oldDate;
        var missionId;
        var TimesheetId = 0;
        var isValid = true;
        
        if(who == "time")
        {
            oldDate = $('#dateVolunteered').val();
            missionId = $('#missionId').val();
        }
        else
        {
            oldDate = $('#dateVolunteered2').val();
            missionId = $('#missionId2').val();
        }
        if (missionId == 0) {
        $("#validAddGoal").text("Please Select Your Mission");
        $("#dateVolunteered").val('');
        $("#dateVolunteered2").val('');
        isValid = false;
        return;
        }

        
     

        if (isValid) {
            $.ajax({
                url: '/User/checkSameDate',
                type: 'POST',
                dataType: 'json',
                data: {
                    MissionId: missionId,
                    Date: oldDate,
                    TimesheetId: TimesheetId
                },
                success: function (data) {
                    debugger
                    //alert('Password changed successfully.');
                    if (data == true) {
                        if(who == "time")
                        {
                             $('#timeDateError').text('You can not select same date');
                            $('#submitTimeBtn').attr('disabled', true);
                        }
                        else
                        {
                        $('#goalDateError').text('You can not select same date');
                        $('#submitBtn').attr('disabled', true);
                        }
                    } else {
                        
                        if(who == "time")
                        {
                          $('#timeDateError').text('');
                        $('#submitTimeBtn').attr('disabled', false);
                        }
                        else
                        {
                        $('#goalDateError').text('');
                        $('#submitBtn').attr('disabled', false);
                        }
                        

                    }

                },
                error: function (error) {
                    alert('An error occurred while selecting date: ' + error);
                }
            });
        }
}
