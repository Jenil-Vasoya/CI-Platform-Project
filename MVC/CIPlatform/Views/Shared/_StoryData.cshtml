
<div class="row gx-0">
    <table class="table table-hover  table-bordered" style="width: 99%;margin-inline: auto;">
        <thead>
            <tr class="table-light" style="height: 70px;">
                <th scope="col" class="thforcmstable">Story Title</th>
                <th scope="col" class="thforcmstable">Full Name</th>
                <th scope="col" class="thforcmstable">Mission Title</th>
                <th scope="col" class="thforcmstable">Action</th>
            </tr>
        </thead>
        @foreach (var item in @ViewBag.StoryList)
        {
            <tbody class="table-border">
                <tr>
                    <td>@item.Title</td>
                    <td>@item.User.FirstName  @item.User.LastName</td>
                    <td>@item.Mission.Title</td>
                    <td>
                        <a asp-controller="Story" type="button" class="btn applyButton" asp-action="StoryDetail" asp-route-id="@item.StoryId">
                            
                                View
                        </a>
                        &nbsp;
                       @if (@item.Status == "PUBLISHED")
                        {
                            <button type="button" class="btn p-0" onclick="approveStory1('true')"><i class="bi bi-check-circle" style="color: green; opacity:30%"></i></button>
                        }
                        else
                        {
                            <button type="button" class="btn p-0" onclick="approveStory(@item.StoryId,'true')"><i class="bi bi-check-circle" style="color: green;"></i></button>
                        }
                        &nbsp;
                        @if (@item.Status == "Decline")
                        {
                            <button type="button" class="btn p-0" onclick="approveStory1('false')"><i class="bi bi-x-circle" style="color: red; opacity:30%" ></i></button>
                        }
                        else
                        {
                            <button type="button" class="btn p-0" onclick="approveStory(@item.StoryId,'false')"><i class="bi bi-x-circle" style="color: red;"></i></button>
                        }
                        <button type="button" class="btn p-0" data-bs-toggle="modal" data-bs-target="#exampleModalDeleteStory-@item.StoryId"><i class="bi bi-trash ms-3"></i></button>

                            <!-- Modal For Delete Story -->
                            <div class="modal fade" id="exampleModalDeleteStory-@item.StoryId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">

                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                Are you sure for delete this Story 
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <form method="post">

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary bg-transparent border border-2 rounded-pill text-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <button type="submit" onclick="deleteStory(@item.StoryId,event)" class="btn applyButton" data-bs-dismiss="modal">Delete</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>

<nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center" onchange="searchMission()" >
            <li class="page-item">
                <button class="page-link" type="submit" aria-label="Previous" onclick="searchMission(1,'story')">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>
            @{
                double totalpages = ViewBag.ttlStories;

                for (int i = 1; i <= totalpages; i++)
                {
                    @if (i == ViewBag.pg_no)
                    {
                        <li class="page-item active">
                            <button class="page-link" type="submit" onclick="searchMission(@i,'story')">@i</button>

                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <button class="page-link" type="submit" onclick="searchMission(@i,'story')">@i</button>
                        </li>
                    }


                }   
            
            <li class="page-item">
                <button class="page-link" type="submit" aria-label="Next" onclick="searchMission(@totalpages,'story')">
                    <span aria-hidden="true">&raquo;</span>
                </button>
            </li>
            }
        </ul>
    </nav> 



<script>

    function deleteStory(storyId,event)
        {
            
             debugger
             event.preventDefault();
             $.ajax({
                         type: 'POST',
                         url: '/Admin/DeleteStory',
                         data: {"StoryId": storyId},
                         success: function(data) {
                             console.log(data);
                             debugger
                             console.log(data);
                             $('#stories').html(data);
                             toastr.error('Story Deleted');
                         },
                        error: function (request, error) {
                         console.log(error);
                     }
                     });
        }

    function approveStory1(result)
    {
        if(result == "true")
        {
            toastr.error('Story is already approved');
        }
        else
        {
            toastr.error('Story is already declined');
        }
    }

    function approveStory(storyId,result)
    {
        $.ajax({
            type: 'POST',
            url: '/Admin/StatusChangeStory',
            data: {"StoryId": storyId, "Result":result},

            success: function(data){
                console.log(data);
                debugger
                 $('#stories').html(data);
                if(result == "true")
                {
                    toastr.success('Story Approved');
                }
                else
                {
                    toastr.error('Story Declined');
                }
            },
            error: function (request,error)
            {
                console.log(error);
            }
        })
    }

</script>