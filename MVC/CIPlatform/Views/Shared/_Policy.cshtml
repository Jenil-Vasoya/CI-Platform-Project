

<style>
    .applyButton {
        border: 2px solid #F88634;
        border-radius: 100px;
        color: #F88634;
        background-color: white;
        padding-left: 20px;
        padding-right: 20px;
    }

        .applyButton:hover {
            background-color: #F88634;
            color: white;
        }
</style>


<nav class="navbar navbar-expand navbar-light bg-light">
    <div class="container">
        <ul class="navbar-nav ">
            <li class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Policy">Privacy Policy</a>
            </li>

        


        <li class="nav-item">
        <!-- Button to trigger modal -->
        <a class="nav-link"  data-bs-toggle="modal" data-bs-target="#myModal">Contact Us</a>
        </li>

        </ul>
        <!-- Modal popup -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Contact Us</h4>
                        <button type="button" class="close" onclick="clearData()" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form>
                    <div class="modal-body">
                        
                            @if (@ViewBag != null)
                            {
                                <div class="form-group mb-3">
                                    <label for="name">Name</label>
                                    <input type="text"  class="form-control" id="name" value="@ViewBag.UserName" placeholder="Enter your name" disabled>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="email">Email</label>
                                    <input type="email"  class="form-control" id="email" value="@ViewBag.Email" placeholder="Enter your email address" disabled>
                                </div>
                                <div class="form-group mb-3">
                                    <label for="subject">Subject</label>
                                    <input type="text"  class="form-control" id="subject" placeholder="Enter the subject of your message">
                                </div>
                                <div class="form-group mb-3">
                                    <label for="message">Message</label>
                                    <textarea class="form-control" id="message" rows="5" placeholder="Enter your message"></textarea>
                                </div>
                            }
                        
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary bg-transparent border border-2 rounded-pill text-secondary" onclick="clearData()" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" onclick="contactus(event)" class="btn applyButton" data-bs-dismiss="modal">Save</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</nav>
  
<script>
    function clearData()
    {
        $('#subject').val(''),
        $('#message').val('')
    }
    function contactus(event){
        debugger
        event.preventDefault();
        
        var formData = {
                         UserName: $('#name').val(),
                         Email: $('#email').val(),
                         Subject: $('#subject').val(),
                         Message: $('#message').val()
                     };

        $.ajax({
           type: "POST",
           url: "/User/AddMessage",
           data:formData,
           
           dataType: "JSON",
           success: function (data) {
                         $('#subject').val(''),
                         $('#message').val('')
                 console.log(data);
                 toastr.success('Message sent SuccessFully!!');
                 
                 
              
           },
           
           });
        
    }

</script>