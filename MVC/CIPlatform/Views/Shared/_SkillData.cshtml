 <style>
     .page-item.active .page-link {
    background-color: #F88634;
    border-color: #F88634;
}

 .page-item > .page-link {
    color: black;
}
 </style>


<div class="row" style="overflow-x: auto;">
    <table class="table table-hover  table-bordered">
        <thead>
            <tr class="table-light" style="height: 70px;">
                <th scope="col" class="thforcmstable">Skill Name</th>
                <th scope="col" class="thforcmstable">Status</th>
                <th scope="col" class="thforcmstable">Action</th>
            </tr>
        </thead>
        @foreach (var item in @ViewBag.SkillList)
        {
            <tbody class="table-border">
                <tr>
                    <td>@item.SkillName</td>
                    <td>@item.Status</td>
                    <td>
                        <button type="button" class="btn p-0" data-bs-toggle="modal" data-bs-target="#exampleModalG-">
                            <i class="bi bi-pencil-square" style="color: coral;"></i>
                        </button>
                        <button type="button" class="btn p-0" data-bs-toggle="modal" data-bs-target="#exampleModalDelete-">
                            <i class="bi bi-trash ms-3"></i>
                        </button>
                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>


  
 <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center" onchange="searchMission()" >
            <li class="page-item">
                <button class="page-link" type="submit" aria-label="Previous" onclick="searchMission(1,'skill')">
                    <span aria-hidden="true">&laquo;</span>
                </button>
            </li>
            @{
                double totalpages = ViewBag.Totalpages;

                for (int i = 1; i <= totalpages; i++)
                {
                    @if (i == ViewBag.pg_no)
                    {
                        <li class="page-item active">
                            <button class="page-link" type="submit" onclick="searchMission(@i,'skill')">@i</button>

                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <button class="page-link" type="submit" onclick="searchMission(@i,'skill')">@i</button>
                        </li>
                    }


                }   
            }
            <li class="page-item">
                <button class="page-link" type="submit" aria-label="Next" onclick="searchMission(@ViewBag.Totalpages,'skill')">
                    <span aria-hidden="true">&raquo;</span>
                </button>
            </li>
        </ul>
    </nav> 
