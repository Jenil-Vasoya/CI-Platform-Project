        <div class="row d-flex">

            <nav class="navbar p-0">
                <div class="container">
                    <div class="d-flex align-items-center col-lg-6 col-md-6 col-12 pl-4" role="search">
                        <img src="~/Assets/images/search.png" class="search" />
                    <input class="form-control pl-5" style="border-style:none;" id="name" name="search" type="search" placeholder="&nbsp;Search Missions..." oninput="searchMission();filterBadges()" aria-label="Search">

                    </div>


                <div class="col-lg-6 col-12 d-flex">

