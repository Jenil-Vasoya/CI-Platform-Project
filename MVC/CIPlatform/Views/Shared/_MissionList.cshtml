

<style>
    .rating {
    display: flex;
    justify-content: center;
    background-color: white;
   
}

    .rating > label {
        position: relative;
        width: 1em;
        font-size: 20px;
        color: #F88634;
        cursor: pointer
    }

</style>

<div class="container ">
    <div class="row">

        @foreach (var item in ViewBag.missionDatas)
        {
            <div class="col-lg-3 col-md-5 col-sm-6">
                <div class="thumbnail h-100">
                    <div class="card h-100">
                        <img src="@item.MediaPath" class="h-100">
                        <div class="position-relative">
                            <div class="position-absolute top-100 start-50 translate-middle rounded-5 p-2" style="background-color: white;">@item.Theme</div>
                        </div>  
                        <div class="card-img-overlay ">
                            <div class="d-flex flex-column  text-end pb-5" style="margin-inline: auto;">

                                <div class="d-flex justify-content-between">
                                    <label style="background-color:green; color:aliceblue; padding:5px">APPLIED</label>

                                    <button class="btn btn-box rounded-5" style="background-color: black ; opacity: 50%;">
                                        <img src="~/Assets/images/pin.png" class="img-fluid cancle-img" alt="">
                                        <span style="color:white;">@item.CityName</span>
                                    </button>
                                </div>

                                <div class="pt-1">
                                    @if (@item.IsFavMission == 1)
                                        {
                                          
                                           <button type="submit"  onclick="Add(@item.MissionId)" class="btn rounded-5 border-light" style="background-color:black; opacity:50%;"><i class="bi bi-heart-fill  text-danger" id="addToFavList_@item.MissionId"></i></button>
                                        }
                                        else
                                        {
                                            <button type="submit"  onclick="Add(@item.MissionId)" class="btn rounded-5  border-light" style="background-color:black; opacity:50%;"><i id="addToFavList_@item.MissionId" class="bi bi-heart text-white"></i></button>
                                        }
                                </div>

                                <div class="">

                                  <button type="submit" class="btn rounded-5  border-light" data-bs-toggle="modal" data-bs-target="#exampleModal1" style="background-color:black; opacity:50%;"><img src="~/Assets/images/user.png" class=" img-fluid cancle-img" alt=""> </button>

                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Co-Worker List</h5>

                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                                                        </div>
                                                        <table class="table">
                                                            <thead>
                                                                <tr>
                                                                    <th>Select</th>
                                                                    <th>Name</th>
                                                                    <th>Email</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var worker in @ViewBag.Users)
                                                                {
                                                                    <tr>
                                                                        <td>
                                                                            <div class="form-check">
                                                                                <input class="form-check-input" name="CoWorkers" type="checkbox" value="@worker.FirstName" id="@worker.UserId" />
                                                                                <input type="hidden" id="uid" value="@worker.UserId" />
                                                                            </div>
                                                                        </td>
                                                                        <td>@worker.FirstName @worker.LastName</td>
                                                                        <td>@worker.Email</td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                            <tfoot>
                                                                <tr>
                                                                    <td colspan="3">
                                                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                                                        <button type="submit" onclick="sendInvitation(@item.MissionId)" class="btn btn-success">Send Invitation</button>
                                                                    </td>
                                                                </tr>
                                                            </tfoot>
                                                        </table>
                                                    

                                                    </div>
                                                </div>
                                            </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


            <div class="col-lg-9 col-md-7 col-sm-6">

                <div class="row">
                    <div class="col-md-8 ">
                        <div class=" float-start pe-2">
                            <i class="bi bi-geo-alt"></i>
                            <span style="font-size: smaller;">@item.CityName</span>
                        </div>
                        <div class=" float-start pe-2">
                            <i class="bi bi-globe"></i>
                            <span style="font-size: smaller;">@item.Theme</span>
                        </div>
                        <div class="d-inline-block align-items-center">
                            <i class="bi bi-people"></i>
                            <span style="font-size: smaller;">@item.OrganizationName</span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex rating1">
                                <div class="col d-flex justify-content-end">
                                   <span class="rating  text-center">
                       
                                            @for (var i = 0; i < (@item.Rating); i++)
                                            {
                                                 <label style="color: #F88634; text-shadow: 0 0 0 #F88634;">&#9733;</label>
                                            }
                                            @for (var i = 0; i < 5 - (@item.Rating); i++)
                                            {
                                                <label style="color: black;">☆</label>
                                            }

                            </span>
                                </div>
                            </div>
                    </div>
                </div>

                <div class="row pt-2">
                    <h5 style="margin-bottom:0px;">@item.Title</h5>
                </div>

                <div class="row">
                    <span style="font-size:smaller;">@item.ShortDescription</span>
                </div>

                <div class="pt-3 row">
                    <div class="col-lg-12 col-md-9 d-flex justify-content-start">
                        <div class="row">
                            @if (@item.MissionType == "Goal")
                                        {
                                <div class="col-6 ">
                                    <div class="card  border-0">
                                        <div class="d-flex  align-items-center">
                                            <img src="~/Assets/images/achieved.png" />
                                            <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                                <div class="progress">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 75%; background-color:#F88634;"></div>
                                                </div>
                                                <div> <span class="">8000 achieved</span> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="card  border-0">
                                        <div class=" d-flex flex-row">
                                            <div class=""><img src="~/Assets/images/deadline.png" class="img-fluid"></div>
                                            <div class=" ">
                                                <h6 class="card-title"> @item.EndDate.ToString("dd/MM/yyyy")</h6>
                                                <p class="card-text ">Deadline</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg col-md-auto float-start " style="order: 2;">
                                <div class=" d-inline-flex align-items-center">
                                    <img src="~/Assets/images/calender.png" />
                                    <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                        <p class="mb-0 "> @item.StartDate.ToString("dd/MM/yyyy")</p>
                                        <p class="mb-0 " style="margin-top: -5px;">Until @item.EndDate.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                            </div>
                             <div class="col-lg col-md-auto float-start pe-lg-0" style="order: 1;">
                                <div class=" d-inline-flex align-items-center">
                                    <img src="~/Assets/images/Seats-left.png" />
                                    <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                        <p class="mb-0 ">@item.Availability</p>
                                        <p class="mb-0 " style="margin-top: -5px;">Seated Left</p>
                                    </div>
                                </div>
                            </div>
                            }
                           
                            
                            
                            @*<div class="col-lg col-md-auto float-start ps-0" style="order: 3;">
                                <div class=" d-inline-flex align-items-center ">
                                <i class="bi bi-tools" style="font-size: 1.4em;"></i>
                                <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                <p class="mb-0 ">skill</p>
                                <p class="mb-0 " style="margin-top: -5px;">Botany</p>
                                </div>
                                </div>
                                </div>*@
                        </div>
                    </div>

                    <div class="col-lg-12 col-md-3 pt-lg-3 d-flex justify-content-center">
                        <div class="d-inline-flex justify-content-center ">
                            <a  asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId">
                                    <button type="submit" class="btn applyButton ">View Detail &nbsp; &nbsp; <i class="bi bi-arrow-right"></i></button>
                                </a>
                        </div>
                    </div>

                </div>

            </div>
            <hr style=" height:20px; opacity: 0;" />
        }

    </div>
</div>  