                    location.reload();
                },
                error: function (request, error) {
                console.log(error);
                }
            })
    }

    function UpdateSetting()
    {
        debugger
        var countries = [];
         $('input[name="setting"]:checked').each(function () {
               countries.push($(this).val());
            });
            
            var checkboxrm = document.querySelector('.setting[name="settingrm"]');
            var checkboxrs = document.querySelector('.setting[name="settingrs"]');
            var checkboxm = document.querySelector('.setting[name="settingm"]');
            var checkboxs = document.querySelector('.setting[name="settings"]');
            var checkboxnm = document.querySelector('.setting[name="settingnm"]');

                if (checkboxrm != null && checkboxrm.checked ) {
                  countries.push(checkboxrm.value);
                }
                if (checkboxrs != null && checkboxrs.checked) {
                  countries.push(checkboxrs.value);
                }
                if (checkboxm != null && checkboxm.checked) {
                  countries.push(checkboxm.value);
                }
                if (checkboxs != null && checkboxs.checked) {
                  countries.push(checkboxs.value);
                }
                if (checkboxnm != null && checkboxnm.checked) {
                  countries.push(checkboxnm.value);
                }

        $.ajax({
                url: "/Home/UpdateSetting",
                method: "POST",
                data: {"type":countries
                },
                success: function (data) {
                    debugger
               $('#notificationSetting').html(data);
                   location.reload();
                },
                error: function (request, error) {
                console.log(error);
                }
            })
    }
</script>
