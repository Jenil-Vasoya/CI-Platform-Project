<style>
    .scrollset {
        max-height: 214px;
        overflow-y: auto;
    }

    .notification-container {
        position: relative;
        display: inline-block;
    }

    .notification-icon {
        width: 24px;
        height: 24px;
    }

    .notification-count {
        position: absolute;
        top: -5px;
        right: -5px;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 20px;
        height: 20px;
        background-color: #F88634;
        color: white;
        font-size: 14px;
        font-weight: bold;
        border-radius: 50%;
    }

</style>


<div class="d-flex " id="notification">

   
      
            @{
                int count = 0;
                <div class="dropdown d-flex justify-content-center align-items-center">
                    <span class="notification-badge" data-bs-toggle="dropdown" id="notification" role="button" aria-haspopup="true" aria-expanded="false">

                        @{
                            
                            if (ViewBag.Notifications is not null )
                            {
                                foreach (var setting in ViewBag.NotificationSetting)
                                {

                                    if (setting.Type == "recommendStory")
                                    {
                                        foreach (var item in ViewBag.RecommandedStory)
                                        {
                                            if(item.Status != "Seen")
                                            {
                                                count = count + 1;
                                            }
                                        }
                                    }

                                    if (setting.Type == "recommendMission")
                                    {
                                        foreach (var item in ViewBag.RecommandedMissions)
                                        {
                                            if(item.Status != "Seen")
                                            {
                                                count = count + 1;
                                            }
                                        }
                                    }

                                    if (setting.Type == "story")
                                    {
                                        foreach (var item in ViewBag.Story)
                                        {
                                            if(item.Status != "Seen")
                                            {
                                                count = count + 1;
                                            }
                                        }
                                    }

                                    if (setting.Type == "mission")
                                    {
                                        foreach (var item in ViewBag.Notifications)
                                        {
                                            if(item.Status != "Seen")
                                            {
                                                count = count + 1;
                                            }
                                        }
                                    }

                                    if (setting.Type == "newMission")
                                    {
                                        foreach (var item in ViewBag.NewMissions)
                                        {
                                             if(item.Status != "Seen")
                                            {
                                                count = count + 1;
                                            }
                                        }
                                    }
                                }
                            }
                    
                        }
                        <span class="notification-container">
                            <img class="notification-icon" src="~/Assets/images/bell.png" alt="not load" />
                            <span class="notification-count">@count</span>
                        </span>


                    </span>

                    <div class="dropdown-menu notification-data" aria-labelledby="notification">
                        <div class="dropdown-header d-flex justify-content-between border-bottom">
                            <i class="bi bi-gear-fill" style="cursor:pointer;" data-bs-toggle="modal" data-bs-target="#notification-setting" alt="not-load"></i>
                            <strong style="padding-inline: inherit;">Notifications</strong>
                            <span style="cursor:pointer;" onclick="ClearAllNotifications()">Clear All</span>
                        </div>
                        <div class="scrollset">
                        @{
                            if (ViewBag.Notifications is not null )
                            {
                                foreach (var setting in ViewBag.NotificationSetting)
                                {

                                    if (setting.Type == "recommendStory")
                                    {
                                        foreach (var item in ViewBag.RecommandedStory)
                                        {
                                            <div class=" dropdown-item d-flex align-items-center justify-content-between border-bottom">
                                                <div class="d-flex align-items-center">

                                                    @foreach (var user in ViewBag.Users)
                                                    {
                                                        string text = item.Text;
                                                        string[] words = text.Split(' ');
                                                        var lastname = words[^1];


                                                        if (user.UserId == lastname)
                                                        {
                                                            <img src="~/Assets/StoryImages/@user.Avatar" class="n-user rounded-circle " height="16px" alt="not-load" />
                                                        }
                                                    }

                                                    @if (@item.Status == "Seen")
                                                    {
                                                        <a asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId" asp-route-NotificationId="@item.NotificationId"  style="text-decoration:none;"> <span class="dropdown-item-text text-muted">@item.Text</span></a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId" asp-route-NotificationId="@item.NotificationId"  style="text-decoration:none;"> <span class="dropdown-item-text text-muted"><span class="text-black">@item.Text</span> </span></a>
                                                    }
                                                </div>
                                                @if (@item.Status == "Unseen")
                                                {
                                                    <div class="rounded-circle" style="background-color:#F88634;height:15px;width:15px;"></div>
                                                }
                                            </div>
                                        }
                                    }

                                    if (setting.Type == "recommendMission")
                                    {
                                        foreach (var item in ViewBag.RecommandedMissions)
                                        {
                                             string text1 = item.Text;
                                            <div class=" dropdown-item d-flex align-items-center justify-content-between border-bottom">
                                                <div class="d-flex align-items-center">
                                                @foreach (var user in ViewBag.Users)
                                                {
                                                    string text = item.Text;
                                                    string[] words = text.Split(' ');
                                                    string lastname = words[^1];

                                                    if (user.UserId == long.Parse(lastname))
                                                    {
                                                        <img src="~/Assets/StoryImages/@user.Avatar" class="n-user rounded-circle " height="16px" alt="not-load" />
                                                    }
                                                }

                                                    @if (@item.Status == "Seen")
                                                    {
                                                        <a asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId" asp-route-NotificationId="@item.NotificationId"  style="text-decoration:none;"> <span class="dropdown-item-text text-muted">@text1</span></a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId" asp-route-NotificationId="@item.NotificationId"  style="text-decoration:none;"> <span class="dropdown-item-text text-muted"><span class="text-black">@item.Text</span> </span></a>
                                                    }
                                                </div>
                                                @if (@item.Status == "Unseen")
                                                {
                                                    <div class="rounded-circle" style="background-color:#F88634;height:15px;width:15px;"></div>
                                                }
                                            </div>
                                        }
                                    }

                                    if (setting.Type == "story")
                                    {
                                        foreach (var item in ViewBag.Story)
                                        {

                                            <div class=" dropdown-item d-flex align-items-center justify-content-between border-bottom">
                                                <div class="d-flex align-items-center">
                                                    @if (item.Text.Contains("Published"))
                                                    {
                                                        <i class="bi bi-check-circle" style="color: green;"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-x-circle" style="color: red;" ></i>
                                                    }
                                                    @if (@item.Status == "Seen")
                                                    {
                                                        <a asp-controller="Story" asp-action="StoryDetail" asp-route-id="@item.StoryId" asp-route-NotificationId="@item.NotificationId" style="text-decoration:none;"> <span class="dropdown-item-text text-muted">@item.Text</span></a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-controller="Story" asp-action="StoryDetail" asp-route-id="@item.StoryId" asp-route-NotificationId="@item.NotificationId" style="text-decoration:none;"> <span class="dropdown-item-text text-black">@item.Text</span></a>
                                                    }
                                                </div>
                                                @if (@item.Status == "Unseen")
                                                {
                                                    <div class="rounded-circle" style="background-color:#F88634;height:15px;width:15px;"></div>
                                                }
                                            </div>
                                        }
                                    }

                                    if (setting.Type == "mission")
                                    {
                                        foreach (var item in ViewBag.Notifications)
                                        {
                                            <div class=" dropdown-item d-flex align-items-center justify-content-between border-bottom">
                                                <div class="d-flex align-items-center">
                                                    @if (item.Text.Contains("Approved"))
                                                    {
                                                        <i class="bi bi-check-circle" style="color: green;"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-x-circle" style="color: red;" ></i>
                                                    }

                                                    @if (@item.Status == "Seen")
                                                    {
                                                        <a asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId" asp-route-NotificationId="@item.NotificationId"  style="text-decoration:none;"> <span class="dropdown-item-text text-muted">@item.Text</span></a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-controller="Home" asp-action="VolunteerMission" asp-route-id="@item.MissionId" asp-route-NotificationId="@item.NotificationId"  style="text-decoration:none;"> <span class="dropdown-item-text text-muted"><span class="text-black">@item.Text</span> </span></a>
                                                    }
                                                </div>
                                                @if (@item.Status == "Unseen")
                                                {
                                                    <div class="rounded-circle" style="background-color:#F88634;height:15px;width:15px;"></div>
                                                }
                                            </div>
                                        }
                                    }

                                    if (setting.Type == "newMission")
                                    {
                                        foreach (var NewMission in ViewBag.NewMissions)
                                        {
                                            <div class="dropdown-item d-flex align-items-center justify-content-between border-bottom mt-2">
                                                <div class="d-flex align-items-center">
                                                    <img src="~/images/add.png" alt="not-load" />
                                                    <a href="/volunteering_mission/@NewMission.MissionId" onclick="ReadNotification(@NewMission.NotificationId)" style="text-decoration:none;"><span class="dropdown-item-text text-muted"> <span class="text-black">@NewMission.Text</span> </span></a>
                                                </div>
                                               @if (@NewMission.Status == "Unseen")
                                                {
                                                    <div class="rounded-circle" style="background-color:#F88634;height:15px;width:15px;"></div>
                                                }
                                            </div>
                                        }
                                    }
                                }
                            }

                        }
                        </div>
                  

                       
                    </div>
                </div>
            }

    
   

</div>

