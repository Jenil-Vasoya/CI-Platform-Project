@using CIPlatform.Entities.Models
<div class="modal-body">
                @{
                    List<NotificationSetting> Settings = new List<NotificationSetting>();
                    List<string> type = new List<string>();
                    if (ViewBag.Notifications is not null)
                    {
                        Settings = ViewBag.NotificationSetting;
                            foreach (var item in Settings)
                            {
                                type.Add(item.Type);
                            }
                    }
                }
                <div class="d-flex justify-content-between">
                    <label class="form-check-label" for="flexCheckDefault">
                        Recommended Missions
                    </label>
                    @if (@type.Contains("recommendMission"))
                    {
                        <input class="form-check-input setting" name="settingrm" checked="checked" type="checkbox" value="recommendMission">
                    }
                    else
                    {
                        <input class="form-check-input setting" name="setting" type="checkbox" value="recommendMission">
                    }
                </div>
                
                <div class="d-flex justify-content-between">
                    <label class="form-check-label" for="flexCheckDefault">
                        Recommended Story
                    </label>
                    @if (@type.Contains("recommendStory"))
                    {
                        <input class="form-check-input setting" name="settingrs" checked="checked" type="checkbox" value="recommendStory">
                    }
                    else
                    {
                        <input class="form-check-input setting" name="setting" type="checkbox" value="recommendStory">
                    }
                </div>

                <div class="d-flex justify-content-between">
                    <label class="form-check-label" for="flexCheckDefault">
                        Stories Requests
                    </label>
                    @if (@type.Contains("story"))
                    {
                        <input class="form-check-input setting" name="settings" checked="checked" type="checkbox" value="story">
                    }
                    else
                    {
                        <input class="form-check-input setting" name="setting" type="checkbox" value="story">
                    }
                </div>
                <div class="d-flex justify-content-between">
                    <label class="form-check-label" for="flexCheckDefault">
                        Missions Requests
                    </label>
                    @if (@type.Contains("mission"))
                    {
                        <input class="form-check-input setting" name="settingm" checked="checked" type="checkbox" value="mission">
                    }
                    else
                    {
                        <input class="form-check-input setting" name="setting" type="checkbox" value="mission">
                    }
                </div>
                <div class="d-flex justify-content-between">
                    <label class="form-check-label" for="flexCheckDefault">
                        New Missions
                    </label>
                    @if (@type.Contains("newMission"))
                    {
                        <input class="form-check-input setting" name="settingnm" checked="checked" type="checkbox" value="newMission">
                    }
                    else
                    {
                        <input class="form-check-input setting" name="setting" type="checkbox" value="newMission">
                    }
                </div>
            </div>