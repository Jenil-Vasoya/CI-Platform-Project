@{
    ViewData["Title"] = "MissionList";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*<link rel="stylesheet" href="~/Assets/css/mlist.css" />*@
    <link rel="stylesheet" href="~/Assets/css/mission.css" />
    <link rel="stylesheet" href="~/css/site.css" />




    <title>header</title>
</head>
<body class="container">
        <div class="row">
            <div class="col-lg-12">
                <nav class="navbar navbar-expand ">
                    <ul class="navbar-nav row  ">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-12  ">
                            <div class="d-flex endtext2">
                        <li class="nav-item">
                            <a class="nav-link  active" aria-current="page" href="#">
                                <h3>Explore @ViewBag.totalMission missions</h3>
                            </a>
                        </li>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6 col-12">
            <div class=" d-flex  endtext1 ">
                <div class="btn-group pe-4">
                    <button type="button" class="btn  dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        Sort by
                    </button>
                    <ul class="dropdown-menu w-100">
                            <li><a class="dropdown-item" asp-action="#">Newest</a></li>
                            <li><a class="dropdown-item" asp-action="#">Oldest</a></li>
                            <li><a class="dropdown-item" asp-action="">Lowest Available Seats</a></li>
                            <li><a class="dropdown-item" asp-action="">Highest Available Seats</a></li>
                            <li><a class="dropdown-item" asp-action="">My Favourite</a></li>
                            <li><a class="dropdown-item" asp-action="">Registration Deadline</a></li>
                        </ul>
                </div>
                <div class="pe-3">
                    <a class="btn" asp-action="MissionGrid">
                        <img src="~/Assets/images/grid.png" style="height: 40px; width: 40px;">
                    </a>
                </div>
                <div style="padding: 5px;">
                    <a class="btn" asp-action="MissionList">
                        <img src="~/Assets/images/list.png" style="height: 30px; width: 30px;">
                    </a>
                </div>
            </div>
        </div>
    
    <div class="row">
                                                
                          @foreach (var item in ViewBag.missionDatas)
                        {
            <div class="col-lg-3 col-md-5 col-sm-6">
                <div class="thumbnail h-100">
                    <div class="card h-100">
                        <img src="@item.MediaPath" class="h-100">
                        <div class="position-relative">
                            <div class="position-absolute top-100 start-50 translate-middle rounded-5 p-2" style="background-color: white;">@item.Theme</div>
                        </div>
                        <div class="card-img-overlay ">
                            <div class="d-flex flex-column  text-end pb-5" style="margin-inline: auto;">

                                <div class="d-flex justify-content-between">
                                    <label style="background-color:green; color:aliceblue; padding:5px">APPLIED</label>

                                    <button class="btn btn-box rounded-5" style="background-color: black ; opacity: 50%;">
                                        <img src="~/Assets/images/pin.png" class="img-fluid cancle-img" alt="">
                                        <span style="color:white;">@item.CityName</span>
                                    </button>
                                </div>

                                <div class="pt-1">
                                    <button class="btn btn-box rounded-5" style="background-color: black ; opacity: 50%;">
                                        <img src="~/Assets/images/heart.png" class=" img-fluid cancle-img" alt="">
                                    </button>
                                </div>

                                <div class="">

                                    <button class="btn btn-box rounded-5" style="background-color: black ; opacity: 50%;">
                                        <img src="~/Assets/images/user.png" class=" img-fluid cancle-img" alt="">
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
                                       

        <div class="col-lg-9 col-md-7 col-sm-6">

            <div class="row">
                <div class="col-md-8 ">
                    <div class=" float-start pe-2">
                        <i class="bi bi-geo-alt"></i>
                        <span style="font-size: smaller;">@item.CityName</span>
                    </div>
                    <div class=" float-start pe-2">
                        <i class="bi bi-globe"></i>
                        <span style="font-size: smaller;">@item.Theme</span>
                    </div>
                    <div class="d-inline-block align-items-center">
                        <i class="bi bi-people"></i>
                        <span style="font-size: smaller;">@item.OrganizationName</span>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="float-end">
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star rating-color"></i>
                        <i class="fa fa-star"></i>
                    </div>
                </div>
            </div>

            <div class="row pt-2">
                <h5 style="margin-bottom:0px;">@item.Title</h5>
            </div>

            <div class="row">
                <span style="font-size:smaller;">@item.ShortDescription</span>
            </div>

            <div class="pt-3 row">
                <div class="col-lg-12 col-md-9 d-flex justify-content-start">
                    <div class="row">
                        <div class="col-lg col-md-auto float-start pe-lg-0" style="order: 1;">
                            <div class=" d-inline-flex align-items-center">
                                <img src="~/Assets/images/Seats-left.png" />
                                <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                    <p class="mb-0 ">397</p>
                                    <p class="mb-0 " style="margin-top: -5px;">Seated Left</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg col-md-auto float-start " style="order: 0;">
                            <div class="d-inline-flex align-items-center">
                                <img src="~/Assets/images/achieved.png" />
                                <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                    <div class="progress" style="height: 10px; margin-top: 8px; width: 100%;">
                                        <div class="progress-bar" role="progressbar" style="width: 70%;"
                                             aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                    <div> <span class="">8000 achieved</span> </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg col-md-auto float-start " style="order: 2;">
                            <div class=" d-inline-flex align-items-center">
                                <img src="~/Assets/images/calender.png" />
                                <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                    <p class="mb-0 "> @item.StartDate.ToString("dd/MM/yyyy")</p>
                                    <p class="mb-0 " style="margin-top: -5px;">Until @item.EndDate.ToString("dd/MM/yyyy")</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg col-md-auto float-start ps-0" style="order: 3;">
                            <div class=" d-inline-flex align-items-center ">
                                <i class="bi bi-tools" style="font-size: 1.4em;"></i>
                                <div class="flex-column px-2" style="font-size:smaller; font-weight:400">
                                    <p class="mb-0 ">skill</p>
                                    <p class="mb-0 " style="margin-top: -5px;">Botany</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 col-md-3 pt-lg-3 d-flex justify-content-center">
                    <div class="d-inline-flex justify-content-center ">
                        <button type="submit" class="btn btn-outline-warning rounded-pill">
                            View
                            Detail <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>

            </div>
            
        </div>
         <hr style=" height:20px; opacity: 0;" />
        
        }
        </div>

       
      

</body>
</html>